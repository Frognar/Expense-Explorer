@inject IStringLocalizer<SharedResources> SharedLocalizer
@inject DialogService DialogService

@code {

    internal async Task<bool> IsConfirmed()
    {
        return await DialogService.Confirm(
            SharedLocalizer["Are you sure?"],
            SharedLocalizer["Confirm"],
            new ConfirmOptions
            {
                CancelButtonText = SharedLocalizer["No"],
                OkButtonText = SharedLocalizer["Yes"]
            }) is true;
    }

}