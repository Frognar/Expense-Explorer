@inject IStringLocalizer<ConfirmationDialog> Localizer
@inject DialogService DialogService

@code {

    internal async Task<bool> IsConfirmed()
    {
        return await DialogService.Confirm(
            Localizer["Are you sure?"],
            Localizer["Confirm"],
            new ConfirmOptions
            {
                CancelButtonText = Localizer["No"],
                OkButtonText = Localizer["Yes"]
            }) is true;
    }

}